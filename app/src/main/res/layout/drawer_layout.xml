<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgHeaderIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/book_app_icon"/>
    <TextView
        android:id="@+id/txtHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/imgHeaderIcon"/>
    <View
        android:id="@+id/lineSeprator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/imgHeaderIcon"/>
    <ImageView
        android:id="@+id/imgBookIcon"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:src="@drawable/book_app_icon"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:layout_below="@+id/lineSeprator"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_drawer"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_below="@+id/imgBookIcon"/>

</RelativeLayout>